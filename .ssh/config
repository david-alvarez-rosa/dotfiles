Host *
     IdentityFile ~/.ssh/id_ed25519_2
     ControlMaster auto
     ControlPersist 30m
     ControlPath ~/.ssh/cm-%C

Host bridge
     HostName ssh.alvarezrosa.com

Host homelab
     HostName 10.0.0.2
     ProxyJump bridge

Host homelab2
     ProxyCommand /usr/bin/cloudflared access ssh --hostname ssh2.alvarezrosa.com
     ServerAliveInterval 30
     ServerAliveCountMax 3
